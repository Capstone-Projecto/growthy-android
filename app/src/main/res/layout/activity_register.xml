<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textColor="#444"
            android:gravity="start"
            android:textSize="14dp"
            android:fontFamily="@font/opensans_medium"
            android:text="Masukan alamat email anda"/>

        <EditText
            android:background="@drawable/bg_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:fontFamily="@font/opensans_medium"
            android:layout_marginHorizontal="5dp"
            android:hint="example@gmail.com"
            android:textSize="12dp"
            android:drawableStart="@drawable/username"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#444"
            android:gravity="start"
            android:textSize="14dp"
            android:fontFamily="@font/opensans_medium"
            android:text="Masukan password anda"/>

        <EditText
            android:background="@drawable/bg_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:fontFamily="@font/opensans_medium"
            android:layout_marginHorizontal="5dp"
            android:hint="Minimal 8 karakter"
            android:textSize="12dp"
            android:drawableStart="@drawable/password"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#444"
            android:gravity="start"
            android:textSize="14dp"
            android:fontFamily="@font/opensans_medium"
            android:text="Masukan ulang password anda"/>

        <EditText
            android:background="@drawable/bg_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:fontFamily="@font/opensans_medium"
            android:layout_marginHorizontal="5dp"
            android:hint="Masukan password anda sebelumnya"
            android:textSize="12dp"
            android:drawableStart="@drawable/password"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/spearmint">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:textColor="#222"
                android:padding="15dp"
                android:textAlignment="center"
                android:fontFamily="@font/opensans_bold"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:fontFamily="@font/opensans_medium"
            android:textColor="#444"
            android:text="Atau"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_footer">

                    <ImageView
                        android:id="@+id/google"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/google"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daftar Dengan Google"
                        android:layout_toRightOf="@id/google"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:fontFamily="@font/opensans_medium"
                android:text="Anda sudah punya Akun? "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:clickable="true"
                android:fontFamily="@font/opensans_bold"
                android:text="Daftar"/>

        </LinearLayout>



    </LinearLayout>

</ScrollView>