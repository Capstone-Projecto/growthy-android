<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kebun.KebunFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="100dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/toEdtProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_vertical|start"
                android:text="Ubah Profile"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_bold"
                android:textAllCaps="false"
                android:textSize="10sp"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.947"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                tools:src="@tools:sample/avatars"
                android:src="@drawable/google"/>

            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amanda Azzahra"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/profile_image"
                android:fontFamily="@font/opensans_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_level"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_below="@id/tv_fullname"
                android:layout_toEndOf="@id/profile_image"
                android:text="Premium"
                android:textSize="12sp"
                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/gold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_poin"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_below="@id/tv_fullname"
                android:layout_toEndOf="@id/tv_level"
                android:text="90"
                android:textSize="12sp"
                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_deskripsi_poin"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_below="@id/tv_fullname"
                android:layout_toEndOf="@id/tv_poin"
                android:text="Poin"
                android:textSize="12sp"
                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/black"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_star"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                tools:src="@tools:sample/avatars"
                android:src="@drawable/stars"
                android:layout_marginStart="5dp"
                android:layout_below="@id/tv_fullname"
                android:layout_toEndOf="@id/tv_deskripsi_poin"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Pribadi"
            android:padding="10dp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_medium"
                    android:gravity="start"
                    android:text="Username"
                    android:textColor="#444"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_form"
                    android:fontFamily="@font/opensans_medium"
                    android:padding="10dp"
                    android:textSize="12dp"
                    tools:text="yyogaagung" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_medium"
                    android:gravity="start"
                    android:text="Email"
                    android:textColor="#444"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_form"
                    android:fontFamily="@font/opensans_medium"
                    android:padding="10dp"
                    android:textSize="12dp"
                    tools:text="yyogaagung@gmail.com" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_medium"
                    android:gravity="start"
                    android:text="Profesi"
                    android:textColor="#444"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_form"
                    android:fontFamily="@font/opensans_medium"
                    android:padding="10dp"
                    android:textSize="12dp"
                    tools:text="Progremmer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_medium"
                    android:gravity="start"
                    android:text="Lokasi"
                    android:textColor="#444"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_form"
                    android:fontFamily="@font/opensans_medium"
                    android:padding="10dp"
                    android:textSize="12dp"
                    tools:text="Salatiga" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_medium"
                    android:gravity="start"
                    android:text="Telepon"
                    android:textColor="#444"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_form"
                    android:fontFamily="@font/opensans_medium"
                    android:padding="10dp"
                    android:textSize="12dp"
                    tools:text="089878674532" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="15dp"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Keluar"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>